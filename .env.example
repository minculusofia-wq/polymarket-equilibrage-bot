# Backend Environment Variables
DATABASE_URL=postgresql://polymarket:polymarket@db:5432/polymarket_bot
REDIS_URL=redis://redis:6379/0

# Polymarket API
POLYMARKET_API_KEY=your_polymarket_api_key_here
POLYMARKET_PRIVATE_KEY=your_private_key_here
POLYMARKET_CHAIN_ID=137  # Polygon mainnet

# Security
ENCRYPTION_KEY=your_fernet_encryption_key_here  # Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
SECRET_KEY=your_secret_key_here  # For JWT if implementing auth

# News API (optional)
NEWS_API_KEY=your_newsapi_key_here

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Scanner Configuration
SCANNER_INTERVAL_SECONDS=300  # 5 minutes
MONITOR_INTERVAL_SECONDS=30   # 30 seconds
WHALE_TRACKER_INTERVAL_SECONDS=600  # 10 minutes

# Trading Configuration (defaults, can be overridden in UI)
DEFAULT_CAPITAL_ALLOCATION_PERCENT=10
DEFAULT_MAX_POSITIONS=3
DEFAULT_OPPORTUNITY_THRESHOLD=6
DEFAULT_STOP_LOSS=0
DEFAULT_TAKE_PROFIT=0

# Logging
LOG_LEVEL=INFO

# Frontend Environment Variables
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000/ws
